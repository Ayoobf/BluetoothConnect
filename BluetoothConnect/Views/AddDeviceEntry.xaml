<Window x:Class="BluetoothConnect.Views.AddDeviceEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Name="AddEntry"
             Width="350"
             Height="150"
             >

    <ItemsControl ItemsSource="{Binding BluetoothDevices ,Source={StaticResource HomePageViewModel}}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" Width="240" Height="24" FontSize="16" FontFamily="Inter" FontWeight="Medium" Margin="0 16 0 16"></TextBlock>
                    <Button Content="Add" Command="{Binding AddDeviceCommand, Source={StaticResource HomePageViewModel}}"
                            CommandParameter="{Binding}" Width="86" Height="36" Background="#FFFFFF" BorderBrush="#E0E0E0" Margin="5"/>
                </StackPanel>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl></Window>

