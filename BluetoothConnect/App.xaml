<Application x:Class="BluetoothConnect.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:BluetoothConnect.ViewModels"
             Startup="App_OnStartup"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Views/TaskBarAsset.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Style x:Key="Header" TargetType="TextBlock" />
            <viewModels:AirPodsViewModel x:Key="ConnectAirpodsViewModel" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
